<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.djy.secondmarket">

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Glide需要用到网络功能，声明权限 -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/market"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Fragment.HomeSearch" />
        <activity android:name=".Fragment.Sort.SortDigital" />
        <activity android:name=".Fragment.Sort.SortElectrical" />
        <activity android:name=".Fragment.Sort.SortDaily" />
        <activity android:name=".Fragment.Sort.SortBooks" />
        <activity android:name=".Fragment.Sort.SortClothes" />
        <activity android:name=".Fragment.Sort.SortSports" />
        <activity android:name=".Fragment.Me.Login" />
        <activity android:name=".Fragment.Me.Register" />
        <activity android:name=".Fragment.Me.ForgetPassword"></activity>
    </application>

</manifest>